startup_message off
term screen-256color
hardstatus off
escape ^Tt
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'
vbell off

# start at window 1
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1
